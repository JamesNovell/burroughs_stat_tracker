{
  "_comment": "SECURITY WARNING: Never commit config.json with real credentials to version control. This file (config.json.example) is a template with placeholder values. Copy this to config.json and fill in your actual credentials. Real credentials should be kept secure and never committed to git history.",
  "database": {
    "host": "your-database-host",
    "user": "your-database-user",
    "password": "your-database-password",
    "name": "master"
  },
  "polling": {
    "interval_minutes": 5
  },
  "daily_summary": {
    "eod_hour": 23,
    "eod_minute": 59,
    "timezone": "CST"
  },
  "tables": {
    "source_table": "dbo.Burroughs_Open_Calls",
    "recyclers": {
      "stat_table": "Burroughs_Recyclers_Stat",
      "history_table": "Burroughs_Recyclers_Closed_Call_History",
      "hourly_table": "Burroughs_Recyclers_Hourly_Stat",
      "daily_table": "Burroughs_Recyclers_Daily_Summary",
      "weekly_table": "Burroughs_Recyclers_Weekly_Summary",
      "monthly_table": "Burroughs_Recyclers_Monthly_Summary"
    },
    "smart_safes": {
      "stat_table": "Burroughs_Smart_Safes_Stat",
      "history_table": "Burroughs_Smart_Safes_Closed_Call_History",
      "hourly_table": "Burroughs_Smart_Safes_Hourly_Stat",
      "daily_table": "Burroughs_Smart_Safes_Daily_Summary",
      "weekly_table": "Burroughs_Smart_Safes_Weekly_Summary",
      "monthly_table": "Burroughs_Smart_Safes_Monthly_Summary"
    }
  },
  "aggregation": {
    "hourly": {
      "enabled": true,
      "trigger_on_hour_boundary": true,
      "validation_enabled": true
    },
    "daily": {
      "enabled": true,
      "aggregate_from": "hourly"
    },
    "weekly": {
      "enabled": true,
      "aggregate_from": "daily",
      "week_starts_on": "Sunday"
    },
    "monthly": {
      "enabled": true,
      "aggregate_from": "weekly"
    }
  },
  "tracking_database": {
    "driver": "ODBC Driver 18 for SQL Server",
    "server": "your-tracking-database-server",
    "database": "your-tracking-database-name",
    "username": "your-tracking-database-user",
    "password": "your-tracking-database-password",
    "trust_server_certificate": true
  },
  "fedex_api": {
    "api_key": "your-fedex-api-key",
    "api_secret": "your-fedex-api-secret",
    "use_production": true
  },
  "ups_api": {
    "client_id": "your-ups-client-id",
    "client_secret": "your-ups-client-secret"
  },
  "troubleshoot": {
    "_comment": "Troubleshoot mode: When enabled, will reprocess the last processed batch on startup for testing/debugging",
    "reprocess_last_batch_on_startup": false
  },
  "tracking": {
    "_comment": "Tracking batch processing configuration",
    "max_workers": 10
  }
}

